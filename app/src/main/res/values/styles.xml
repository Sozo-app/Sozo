<resources>

    <style name="Widget.Theme.AnimeApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar"></style>

    <style name="Widget.Theme.AnimeApp.ButtonBar.Fullscreen" parent=""></style>

    <style name="Widget.AnimeApp.AppWidget.Container" parent="android:Widget"></style>

    <style name="Widget.AnimeApp.AppWidget.InnerView" parent="android:Widget"></style>

    <style name="textAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="textAppearanceMaterialToolbar" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Amoled" parent="">
        <item name="android:colorBackground">@color/darkest_Black</item>
        <item name="colorOnBackground">@color/bg</item>
        <item name="themeContentColor">@color/detail_Bg</item>
        <item name="colorOnSurface">@color/detail_Bg</item>
        <!-- set colorSurface to black -->
        <item name="colorSurface">@color/darkest_Black</item>
    </style>
    <style name="PopupTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorBackground">?attr/colorOnSurface</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>