<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">41dp</item>
    </style>

    <style name="NavBarText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2sp</item>
    </style>

    <style name="Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/white</item>
        <item name="startIconTint">@color/basic_color</item>
        <item name="boxStrokeColor">@color/basic_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconTint">@color/basic_color</item>
    </style>

    <style name="BottomSheet_Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="Suffix">
        <item name="android:height">54dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColorHint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorPrimaryContainer</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/bg_filter_dialog</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="FontSmallClickable">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/bg</item>
    </style>

    <style name="FontSmallNegative">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
        <item name="android:textColor">@color/bg</item>
    </style>

    <style name="FontBigBold">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontLarge</item>
        <item name="android:textColor">@color/bg</item>
    </style>

    <style name="FontBig">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontLarge</item>
        <item name="android:textColor">@color/bg</item>
    </style>

    <style name="text10sp">

        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_family</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/nav_bg</item>

        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Demo</item>
    </style>

    <style name="ShapeAppearanceOverlay.Demo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="cornerSize">20dp</item>
        <item name="background">@id/bg</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/round_corner</item>
    </style>

    <string name="MySnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/bg_opp</item>
    </string>

    <style name="roundedImageViewCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="StatusMaterialButton">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:alpha">0.7</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="TextLabelAlpha">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="TextValue">
        <item name="android:alpha">0.9</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">
            @font/poppins_bold
        </item>
        <!--        <item name="textSize">20sp</item>-->
        <item name="title">Browse Anime</item>
        <item name="titleTextColor">@color/bg</item>
        <item name="android:textSize">@dimen/text_size_8x</item>
    </style>

    <style name="TitleTextA">

    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size_6x</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_8x</item>
    </style>


    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RectangleImageView">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="fontTooltip" parent="Widget.Material3.Tooltip">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/Suffix</item>
        <item name="android:layout_margin">48dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.Tooltip</item>
    </style>

    <style name="MyPopup" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/bg</item>
    </style>

    <style name="BottomNavBar" parent="Widget.Material3.BottomNavigationView.ActiveIndicator" />


    <style name="FontAppName">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/fontBig</item>
    </style>

    <style name="FontTitle">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/fontBig</item>
    </style>

    <style name="FontRegular">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="FontRegularBold">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="FontRegularClickable">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="FontRegularClickableBold">
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">@color/bg</item>
    </style>

    <style name="FontRegularNegative">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontNormal</item>
    </style>

    <style name="FontSmall">
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">@dimen/fontSmall</item>
    </style>

</resources>